#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        bootloader {
            bindings = <&bootloader>;
            key-positions = <0 1>;
        };

        bootloader_right {
            bindings = <&bootloader>;
            key-positions = <16 33>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp A  &kp S  &kp ESC    &kp N1  &kp N2  &kp N3        &kp N4        &kp N5  &kp N6  &kp N7     &kp N8         &kp N9     &kp N0   &kp MINUS  &kp EQUAL  &kp BSPC            &kp K_MUTE
&kp D  &kp F  &kp TAB    &kp Q   &kp W   &kp E         &kp R         &kp T           &kp Y      &kp U          &kp I      &kp O    &kp P      &kp LBKT   &kp RBKT  &kp BSLH  &kp C_VOL_DN
&kp G  &kp H  &kp RCTRL  &kp A   &kp S   &kp D         &kp F         &kp G           &kp H      &kp J          &kp K      &kp L    &kp SEMI   &kp SQT    &kp RET             &kp C_VOLUME_UP
&kp J  &kp K  &kp LSHFT  &kp Z   &kp X   &kp C         &kp V         &kp B           &kp N      &kp M          &kp COMMA  &kp DOT  &kp FSLH   &kp RSHFT  &kp UP
&kp L  &kp M  &kp N1     &kp N2  &mo 1   &kp LEFT_ALT  &kp LEFT_GUI                  &kp SPACE  &kp BACKSPACE  &kp N2     &mo 2    &kp N4     &kp LEFT   &kp DOWN            &kp RIGHT
            >;
        };

        layer_1 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans                  &trans  &trans  &trans  &trans  &trans  &trans  &trans          &trans
            >;
